using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.IO;

namespace imagetoexif
{
    class Program
    {
        static void Main(string[] args)
        {

            int count = 0;
            foreach (string s in args)
            {

                if (count % 2 == 0)
                {
                    // Load the image.
                    System.Drawing.Image image1 = System.Drawing.Image.FromFile(args[count]);

                    count = count + 1;

                    // Save the image in Exif format.
                    image1.Save(args[count], System.Drawing.Imaging.ImageFormat.Exif);
                }
                else
                {
                    count = count + 1;

                }

            }

        }
    }
}
